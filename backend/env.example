# AI Service Configuration
# Set to 'openai' or 'huggingface' to force a specific service
# Leave empty for auto-detection based on available API keys
AI_SERVICE_TYPE=

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DUMMY_MODE=true  # Set to true for development without API costs

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_DUMMY_MODE=false  # Set to true for development without API costs

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/csv_opener  # PostgreSQL connection string

# Redis Configuration
REDIS_URL=redis://localhost:6380  # Redis connection string (port 6380 to avoid conflicts)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=  # Leave empty for local development

# Server Configuration
PORT=3001
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# Job Queue Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT=300000

# OpenAI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1000
BACKOFF_MULTIPLIER=2

